{% extends 'base.html.twig' %}

{% block title %}Hello PaymentController!{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="page-header-text">
            Schuld akzeptieren
        </div>
        <div class="page-header-image">
            <img src="{{ asset('assets/img/claim.svg') }}" alt="Tile image">
        </div>

    </div>
    <div class="content-body">
        <div class="empty-list-info is-warning font-size-1-2">
            Wenn du die Person, die Geld von dir fordert, nicht kennst oder du den Betrag oder Grund anzweifelst, lehne die
            Schuld ab. Ansonsten sei ehrlich und akzeptiere sie
        </div>

        {{ transaction_part_summary(dto) | raw }}

        <div class="form-area has-mb-m">
            {{ form_start(form, {'method': 'POST'}) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="form-submit-field">
                {{ form_widget(form.submit, {'attr': {'class': 'btn '}}) }}
            </div>
            {{ form_row(form._token) }}
            <div class="form-submit-field">
                {{ form_widget(form.decline, {'attr': {'class': 'btn decline'}}) }}
            </div>
        </div>
