{% extends 'base.html.twig' %}

{% block title %}Hello PaymentController!{% endblock %}

{% block body %}
    <section class="hero-section">

        <div class="hero-slider owl-carousel">
            <div class="hs-item-own">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                {% include 'base.info.html.twig' %}

                                {% if debtVariant %}
                                    <p> Möchtest du das Geld jetzt überweisen?</p>
                                {% else %}
                                    <p>Die Überweisung lässt seit Tagen auf sich warten</p>
                                {% endif %}


                                {% if debtVariant %}
                                    {{ form_start(form, {'method': 'POST'}) }}
                                    {{ form_row(form._token) }}
                                    {{ form_widget(form.submit, {'attr': {'class': 'site-btn loan'}}) }}
                                    {{ form_widget(form.decline, {'attr': {'class': 'site-btn loan'}}) }}
                                {% else %}
                                    {{ form_start(form, {'method': 'POST'}) }}
                                    {{ form_row(form._token) }}
                                    {{ form_widget(form.submit, {'attr': {'class': 'site-btn debt'}}) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
