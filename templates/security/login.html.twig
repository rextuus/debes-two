{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="hero-section">
        <div class="hero-slider owl-carousel">
            <div class="hs-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hs-text">
                                <h2><span>Willkommen</span> zur√ºck</h2>
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            Du bist eingeloggt als {{ app.user.username }}, <a
                                                    href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                    <div>
                                        <h3>Username</h3>
                                    </div>
                                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                           class="form-control"
                                           required autofocus>
                                    <div>
                                        <h3>Passwort</h3>
                                    </div>
                                    <input type="password" name="password" id="inputPassword" class="form-control"
                                           required>

                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >

                                    {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                    #}
                                    <br>
                                    <button class="site-btn" type="submit">
                                        Einloggen
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
