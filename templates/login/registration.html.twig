{% extends '../base.html.twig' %}

{% block title %}Registrierung{% endblock %}

{% block body %}
    <div class="tab-nav">
        <button class="tab-button link" data-tab="tab-1" data-name="Login" data-link="{{ path('app_login') }}"
                data-image="{{ asset('assets/img/login.svg') }}"></button>
        <button class="tab-button active" data-tab="tab-2" data-name="Registrieren"
                data-image="{{ asset('assets/img/registration.svg') }}"></button>
    </div>

    <div class="page-header">
        <div class="page-header-text">
            Registrieren
        </div>
        <div class="page-header-image">
            <img src="{{ asset('assets/img/registration.svg') }}" alt="Tile image">
        </div>

    </div>


    <div class="content-body">
        <div id="tab-1" class="tab"></div>
        <div id="tab-2" class="tab active">
            <div class="empty-list-info font-size-1-2">Eine gute Entscheidung dabei zu sein</div>
            <div class="form-area">
                {{ form_start(registrationForm, {'method': 'POST'}) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(registrationForm) }}
                </div>
                <div class="form-input-field">
                    <label class="hidden" for="user_username"></label>
                    <div class="image-form-row">
                        <div class="image-form-row-image">
                            <img src="{{ asset('assets/img/person.svg') }}" alt="Tile image">
                        </div>
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-style', 'placeholder': 'Username', 'id': 'username'}}) }}
                        {#                        <input class="form-style" type="text" id="registration-username" placeholder="Username"> #}
                    </div>
                </div>
                <div class="form-input-field">
                    <label class="hidden" for="user_password_first">Passwort</label>
                    <div class="image-form-row">
                        <div class="image-form-row-image">
                            <img src="{{ asset('assets/img/password.svg') }}" alt="Tile image">
                        </div>
                        {{ form_widget(registrationForm.password, {'attr': {'class': 'form-style double-form-style', 'id': 'password'}}) }}
                    </div>
                </div>
                <div class="form-input-field">
                    <label class="hidden" for="user_firstName"></label>
                    <div class="image-form-row">
                        <div class="image-form-row-image">
                            <img src="{{ asset ('assets/img/name.svg') }}" alt="Tile image">
                        </div>
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-style', 'placeholder':'Vorname', 'id': 'firstName'}}) }}
                    </div>
                </div>
                <div class="form-input-field">
                    <label class="hidden" for="user_lastName"></label>
                    <div class="image-form-row">
                        <div class="image-form-row-image">
                            <img src="{{ asset ('assets/img/name.svg') }}" alt="Tile image">
                        </div>
                        {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-style', 'placeholder':'Nachname', 'id': 'lastName'}}) }}
                    </div>
                </div>
                <div class="form-input-field">
                    <label class="hidden" for="user_email"></label>
                    <div class="image-form-row">
                        <div class="image-form-row-image">
                            <img src="{{ asset ('assets/img/email.svg') }}" alt="Tile image">
                        </div>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-style', 'placeholder':'Email', 'id': 'email'}}) }}
                    </div>
                </div>
                {{ form_row(registrationForm._token) }}

                <div class="form-submit-field">
                        {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn'}}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
